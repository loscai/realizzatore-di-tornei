        <TextBox x:Name="txtbox_punti_sq2" HorizontalAlignment="Left" Height="28" Margin="215,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>
        <Button x:Name="btn_invia" Content="Invia" HorizontalAlignment="Center" Height="81" Margin="0,303,0,0" VerticalAlignment="Top" Width="230" Click="btn_invia_Click"/>
