<Window x:Class="realizzatore_di_tornei.ImpostaPunti"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:realizzatore_di_tornei"
        mc:Ignorable="d"
        Title="ImpostaPunti" Height="450" Width="400">
    <Grid Width="400">
        <Label Content="Punteggio squadra 1: " HorizontalAlignment="Left" Height="28" Margin="10,43,0,0" VerticalAlignment="Top" Width="128"/>
        <Label Content="Punteggio squadra 2: " HorizontalAlignment="Left" Height="28" Margin="10,71,0,0" VerticalAlignment="Top" Width="128"/>
        <TextBox x:Name="txtbox_punti_sq1" HorizontalAlignment="Left" Height="28" Margin="143,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <TextBox x:Name="txtbox_punti_sq2" HorizontalAlignment="Left" Height="28" Margin="143,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <Button x:Name="btn_invia" Content="Invia" HorizontalAlignment="Center" Height="81" Margin="0,303,0,0" VerticalAlignment="Top" Width="230" Click="btn_invia_Click"/>

    </Grid>
</Window>
